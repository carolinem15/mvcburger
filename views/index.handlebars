<div class="container">
<div class="row">
<div class="col-md-4">
<h2>BURGERS THAT ARE READY TO BE DEVOURED!</h2>
{{!-- these conditionals determine where the incoming new burger is placed on the page --}}
<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{> burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-md-4" >
<h2>Order a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit" class="submitBtn">Order Burger</button>
</form>
</div>

<div class="col-md-4">
<h2>BURGERS YOU DEVOURED!</h2>

<ul>
  {{#each burgers}}
    {{#if devour}}
      {{> burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
</div>



